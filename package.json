{
  "name": "@jdlien/validator",
  "version": "1.4.2",
  "type": "module",
  "module": "dist/validator.js",
  "types": "dist/Validator.d.ts",
  "files": [
    "dist"
  ],
  "description": "Validates and sanitizes the inputs in a form using native HTML attributes.",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly && tailwindcss -i demo/demo-src.css -o demo/demo.css -m",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "tw": "tailwindcss -i demo/demo-src.css -o demo/demo.css -w -m"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jdlien/validator.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "form",
    "validation",
    "front-end",
    "better",
    "HTML",
    "inputs",
    "date",
    "time",
    "color",
    "required",
    "field"
  ],
  "author": "JD Lien",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jdlien/validator/issues"
  },
  "homepage": "https://github.com/jdlien/validator#readme",
  "devDependencies": {
    "@sheerun/mutationobserver-shim": "^0.3.3",
    "@tailwindcss/forms": "^0.5.3",
    "@types/jsdom": "^21.1.0",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "^0.34.2",
    "canvas": "^2.11.2",
    "jsdom": "^22.1.0",
    "jsdom-global": "^3.0.2",
    "prettier": "^3.0.1",
    "tailwindcss": "^3.2.7",
    "typescript": "^5.1.6",
    "vite": "^4.1.0",
    "vitest": "^0.34.1"
